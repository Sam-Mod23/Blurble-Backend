{
  "name": "mongoose-test-scenarios",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "endpoint-tests-mac": "NODE_ENV=test && npm run db-start-mac && npm run app-connect",
    "endpoint-tests-linux": "NODE_ENV=test npm run db-start-linux & (sleep 5 && npm run app-connect)",
    "test": "jest",
    "migrate-up": "migrate up create-clubs-collection -d mongodb://localhost:27017/blurble",
    "db-start-linux": "mongod",
    "db-stop-linux": "mongod --shutdown",
    "db-start-mac": "brew services start mongodb-community@4.4",
    "db-stop-mac": "brew services stop mongodb-community@4.4",
    "app-connect": "node ./database/db-connection.js",
    "seed": "node ./database/seed.js",
    "query-test": "NODE_ENV=test node ./database/utils/db-query.js > output-test.txt",
    "query": "node ./database/utils/db-query.js > output.txt",
    "start-local": "mongod & (sleep 5 && npm run app-connect & (sleep 5 && npm run seed))",
    "start-mac-local": "npm run db-start-mac & (sleep 5 && npm run app-connect & (sleep 5 && npm run seed))",
    "start": "node listen.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "migrate-mongo": "^8.2.2",
    "mongodb": "^3.6.6",
    "mongoose": "^5.12.4",
    "node": "^15.14.0"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "supertest": "^6.1.3"
  },
  "description": "",
  "jest": {
    "testEnvironment": "node"
  }
}
